                      </ul>  
                    </div>
                  </div>
                </div>
                <!-- break -->

                <!-- FEATURED --> 
                <div class="col-md-4 col-xs-12">
                  <div class="top-featured-container">
                    <div class="top-content">
                      <h3>Top 10 Featured Hackathons</h3>  
                      <hr>
                      <ul>
                        <% @featured.limit(10).each do |hackathon| %>
                          <li><%= link_to hackathon.title, nice_hackathon_path(hackathon) %></li>
                        <% end %>
                      </ul> 
                    </div>
                  </div>
                </div>

                <!-- LATEST --> 
                <div class="col-md-4 col-xs-12">
                  <div class="top-container">
                    <div class="top-content">
                      <h3>Top 10 Latest Hackathons</h3> 
                      <hr> 
                      <ul>
                        <% @latest.each do |hackathon| %>
                          <li><%= link_to hackathon.title, nice_hackathon_path(hackathon) %></li>
                        <% end %>
                      </ul> 
                    </div>
                  </div>
                </div>
                <!-- break -->
              </div>
              <div>
                <h3>About Hackevents</h3>
                <p>The search engine Hackevents finds the best hackathon for you in Germany, USA, Europe and worldwide.</p>
