<header class="header-image" style="background-color:antiquewhite;height:400px;">
  <div class="container" style="color:white;text-align:center;padding-top:50px;">
    <h1>FIND YOUR BEST HACKATHON</h1>
    <h3>Choose from <text style="color:#F57C00;"><%= @count %></text> hackathons in <text style="color:#F57C00;"><%= @city_count %></text> cities</h3>
    <div style="margin-top:80px;">
      <h4>Pick your city to get started</h4><br>
      <%= link_to "Go to #{ @result.city }", root_path, class: "btn btn-primary btn-lg", :style => "margin-right:20px;" %>
      <%= link_to "Explore other cities", "#explore-cities", class: "btn btn-default btn-lg" %>
    </div>
  </div>
</header>

<div id="featured-hackathons" class="container" style="margin-top:30px;">
  <div style="text-align:center;">
    <h2>FEATURED HACKATHONS</h2>
    <p>Don't miss the best events of the season</p><br>
  </div>
  <div class="hackathons">
    <% @featured.first(3).each do |hackathon| %>

      <%= render partial: '/hackathons/hackathon', locals: { hackathon: hackathon, membership_hackathon_ids: @membership_hackathon_ids } %>

    <% end %>
  </div>
  <div style="text-align:center;">
    <%= link_to "See all hackathons", hackathons_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>



<div style="background-color:#f2f2f2;">
<div id="explore-cities" class="container" style="padding-top:30px;padding-bottom:30px;margin-top:100px;text-align:center;">
  <div>
    <h2>EXPLORE THE WORLD</h2>
    <p>See where people are hacking, around the world</p><br>
  </div>
  <div class="row" style="color:white;">
    <% @cities.first(3).each do |city| %>
      <%= link_to city_path(city) do %>
        <div class="city-image" style="background-image:url('<%= city.image_url %>');background-color:lightgrey;height:200px;line-height:200px;">
          <span><%= city.name %></span>
        </div><br>
      <% end %>
    <% end %>
  </div>
  <div style="margin-top:20px;">
    <%= link_to "See all cities", root_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
</div>