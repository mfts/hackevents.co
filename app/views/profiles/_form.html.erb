<%= simple_form_for(@user, url: profile_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, label: "First Name" %>
    <%= f.input :last_name, label: "Last Name" %>
    <%= f.input :twitter_name, label: "Twitter Handle" %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: "Password (again)" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Save changes", :class => "btn btn-primary" %>
    <%= link_to 'Back', profile_path, :class => "btn btn-link" %>
  </div>
<% end %>
