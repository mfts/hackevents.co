<h1>
  <%= @user.first_name %>
  <%= @user.last_name %>
</h1>

<p>
  <strong>Twitter name:</strong>
  <%= @user.twitter_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<div>
  <% @friendsList.each do |f| %>
  <p><%= f.id %></p>
  <% if @user.isUser?(f.id) %>
  <p> check </p>
  <% end %>
  <br />
  <% end %>
</div>

<hr />

<%= link_to 'Edit', edit_profile_path, class: "btn btn-default" %>
<%= link_to 'Delete', @user , method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
