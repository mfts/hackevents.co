<h1><%= @user.name %></h1>
<p><%= @user.description %></p>

<div><img class="img-circle" src="<%= @user.profile_image %>" style="width:150px;height:150px;"></img></div>

<%= link_to 'Edit', edit_twitter_account_path(@user), class: "btn btn-default" %>
<%= link_to 'Delete', @user , method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
