<% case params[:style] %>
<% when "map" %>
  <%= render :partial => "list" %>
<% when "calendar" %>
  <%= render :partial => "calendar" %>
<% else %>

  <h1>
    All hackathons in one place.
  </h1>
  <p class="lead">
    Hackevents helps you find and plan your next hackathon.
  </p>
  <div class="row" id="page-search-bar">
    <div class="col-md-9">
      <% if @q.present? %>
        <%= search_form_for @q do |f| %>
          <div class="input-group" style="padding: 0 10px;">
            <%= f.text_field :title_or_country_or_city_cont, :placeholder => "Search for hackathons, cities, and countries", :class => "form-control" %>
            <span class="input-group-btn">
              <%= f.submit "Search", class: "btn btn-primary" %>
            </span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <nav class="navbar navbar-default"> 
    <div class="container">
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
              <li class="<%= params[:style] == 'all' || params[:style].blank? ? 'active' : 'normal' %>">
                <a href="?style=all">
                  All Hackathons</a>
              </li>

              <li class="<%= params[:style] == 'recent' ? 'active' : 'normal' %>">
                <a href="?style=recent">
                  Recently Added</a>
              </li>
          </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
  </nav>

  <hr />
  
  <% if params[:style] == 'recent' %>
    <div class="posts">
      <%= render partial: "recent" %>
    </div>
  <% else %>
    <div class="hackathons">
      <%= render partial: "list" %>
    </div>
  <% end %>
<% end %>
