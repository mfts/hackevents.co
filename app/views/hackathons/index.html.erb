<% case params[:style] %>
<% when "map" %>
  <%= render :partial => "list" %>
<% when "calendar" %>
  <%= render :partial => "calendar" %>
<% else %>

  <h1>
    All hackathons in one place.
  </h1>
  <p class="lead">
    Hackevents helps you find and plan your next hackathon.
  </p>
  <div class="hidden-md hidden-lg col-md-9">
    <% if @q.present? %>
      <%= search_form_for @q do |f| %>
        <div class="input-group">
          <%= f.text_field :title_or_country_or_city_cont, :placeholder => "Search for hackathons, cities, and countries", :class => "form-control" %>
          <span class="input-group-btn">
            <%= f.submit "Search", class: "btn btn-primary" %>
          </span>
        </div>
      <% end %>
    <% end %>
  </div>

  <hr />
  
  <%= render :partial => "list" %>
<% end %>
