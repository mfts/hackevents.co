<div class="row">
  <div class="col s12 m12">
    <div class="card white">
      <div class="card-content grey-darken-4-text">
        <div class="card-title">
          <a href="#">Find all Hackathons in Europe</a>
        </div>

<%= search_form_for @q do |f| %>

        <div class="field">
          <%= f.text_field :title_or_country_or_city_cont, :placeholder => "Country or City or Title" %>
        </div>
        <div class="actions"><%= f.submit "Search" %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  



<br>
<div class="field center">
  <% if@hackathons.total_count == 0 %>
  Sorry no Hackathons found.
  <br>
  <iframe src="//giphy.com/embed/8dTuHJeEMjxW8" width="480" height="270" frameBorder="0" style="max-width: 100%" class="giphy-embed" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
  <% else %>
  <%= @hackathons.total_count %> found.
  <div class="white">
  <table id="hackathons" class="hoverable">
    <thead>
      <tr>
        <th><%= sort_link @q, :date_start, "Date", default_order: :desc   %></th>
        <th><%= sort_link @q, :title, "Hackathon" %></th>
        <th class="hide-on-med-and-down"><%= "Weekday" %></th>
        <th class="hide-on-med-and-down"><%= sort_link @q, :city, "City" %></th>
        <th class="hide-on-med-and-down"><%= sort_link @q, :country, "Country" %></th>
      </tr>
    </thead>

    <tbody>
    <% @hackathons.each do |hackathon| %>
      <tr>
        <td>
          <div class="upvote">
            <div class="upvote-count"><%= hackathon.date_start.strftime("%e") %></div>
            <div class="upvote-count"><%= hackathon.date_start.strftime("%B").first(3) %></div>
          </div>
        </td>
        <td>
          <%= link_to(hackathon.title, hackathon, 'data-no-turbolink' => false) %>
          <br>
          <%= hackathon.city %>, <%= hackathon.country %>
        </td>
        
        <td class="hide-on-med-and-down">
          <% if hackathon.date_start != hackathon.date_end  %>
          <%= hackathon.date_start.strftime("%a") %> - <%=hackathon.date_end.strftime("%a")%>
          <% else %>
          <%= hackathon.date_start.strftime("%a") %>
          <% end %>
        </td>
        <td class="hide-on-med-and-down"><%= hackathon.city %></td>
        <td class="hide-on-med-and-down"><%= hackathon.country %></td>
        <td>
          <a href="<%= hackathon.url %>?ref=hackevents" target="_blank"><i class="small mdi-action-open-in-new"></i></a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<center><%= paginate @hackathons %></center>
  <% end %>
  
</div>

<br><br>






