<% if @hackathons.present? %>
  <p style="display: none;">
    Sort:
    <%= sort_link @q, :date_start, "Date", default_order: :desc   %>,
    <%= sort_link @q, :title, "Name" %>,
    <%= sort_link @q, :city, "City" %>,
    <%= sort_link @q, :country, "Country" %>
  </p>
  
  <hr class="hidden-xs hidden-sm hidden-lg" />
  
  <div class="hackathons">
    <% puts @hackathons.pluck(:created_at).to_json %>

    <% @hackathons.order(date_start: :DESC).each do |hackathon| %>

      <%= render partial: 'hackathon', locals: { hackathon: hackathon, membership_hackathon_ids: @membership_hackathon_ids } %>

    <% end %>
  </div>
  
  
  
  
  <%= paginate @hackathons, :theme => 'twitter-bootstrap-3' %>

<% else %>

  <p>
    Sorry no Hackathons found.
  </p>
  <%= link_to image_tag('nyancat.png', style: "max-width:100%;"), "http://www.oktoberhackfest.com/?ref=hackevents" %>

<% end %>