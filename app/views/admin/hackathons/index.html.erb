<h1>
  Hackathons
</h1>

<hr />

<p>
  <%= link_to "New", new_admin_hackathon_path, class: "btn btn-default" %>
</p>

<hr />

<% @hackathons.sort_by(&:created_at).reverse.each do |hackathon| %>
  <div style="display:inline-block;">
    <p>
      <%= l(hackathon.date_start, format: "%e %b") %>
      <%= link_to hackathon.title, edit_admin_hackathon_path(hackathon) %>
      <% if hackathon.sponsors.exists? %>
        <%= p "sponsor exists" %>
      <% end %>
    </p>
  </div>
  <div style="display:inline-block;">
    <%= link_to "Share on Twitter", "https://twitter.com/intent/tweet?text=Join%20me%20at%20#{ hackathon.title }%20%23hackathon%20in%20#{ hackathon.city_string },%20#{ hackathon.country }%20#{ nice_hackathon_url(hackathon) }%20on%20%40Hackevents", class: "btn btn-twitter", :id => "twitter-share", target: "_blank" %>
  </div></br>
<% end %>

