    <![endif]-->
  </head>
  <body class="sidebar-hidden<%#= sidebar_visible? ? "sidebar-visible" : "sidebar-hidden" %>">
    
    <%= render partial: "layouts/home_main", locals: { page: "home" } %>
    
    <% if Rails.env.production? %>
    <%= render partial: "layouts/scripts" %>
    <% end %>
  </body>
  <%= render :partial => "layouts/footer" %>
