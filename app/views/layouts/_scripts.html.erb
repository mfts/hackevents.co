<% if logged_in? %>
<script type="text/javascript">
analytics.identify('<%= current_user.id %>', {
  location: '<%= current_user.location %>',
  hackathon_count: '<%= current_user.hackathons.count %>',
  name: '<%= current_user.first_name %> <%= current_user.last_name %> (@<%= current_user.twitter_account.username %>)',
  username: '@<%= current_user.twitter_account.username %>',
  following_count: '<%= current_user.hackathons.count %>',
  follower_count: '<%= current_user.hackathons.count %>',
