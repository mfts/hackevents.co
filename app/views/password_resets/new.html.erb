<div class="col-md-5 col-md-offset-3">
  <div class="form-area">  
    <br style="clear:both">
      <h3 style="margin-bottom: 25px;">Reset Your Password</h3>

        <%= simple_form_for(:session, url: password_resets_path) do |f| %>

        <div class="form-inputs">
          <%= f.input :email, label: "Email Address" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Reset Password", :class => "btn btn-primary" %>
          <%= link_to :back, :class => "btn" %>
        </div>
        <% end %>
  </div>
</div>