<div class="col-md-5 col-md-offset-3">
  <div class="form-area">  
    <br style="clear:both">
      <h3 style="margin-bottom: 25px;">Change Your Password</h3>

        <%= simple_form_for(@user, url: password_reset_path(@user.password_reset_token), html: { method: :patch }) do |f| %>

        <div class="form-inputs">
          <%= f.input :password %>
          <%= f.input :password_confirmation, label: "Password (again)" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Change Password", :class => "btn btn-primary" %>
        </div>
        <% end %>
  </div>
</div>