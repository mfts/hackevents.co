<div class="col-md-5 col-md-offset-3">
  <div class="form-area">  
    <br style="clear:both">
      <h3 style="margin-bottom: 25px;">Log In</h3>

        <%= simple_form_for(:session, url: user_sessions_path) do |f| %>

        <div class="form-inputs">
          <%= f.input :email, label: "Email Address" %>
          <%= f.input :password %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log In", :class => "btn btn-primary" %>
          <%= link_to "Forgot Password", new_password_reset_path, :class => "btn" %>
        </div>
        <% end %>
  </div>
</div>